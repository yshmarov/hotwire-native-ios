{
  "rules":[
    {
      "patterns":[
        "/new$"
      ],
      "properties":{
        "context":"modal",
        "modal_dismiss_gesture_enabled": false
      }
    },
    {
      "patterns":[
        "/newMedium$"
      ],
      "properties":{
        "context":"modal",
        "modal_style":"medium",
        "modal_dismiss_gesture_enabled": true
      }
    },
    {
      "patterns":[
        "/newLarge$"
      ],
      "properties":{
        "background_color":"black",
        "context":"modal",
        "modal_style":"large"
      }
    },
    {
      "patterns":[
        "/newFull$"
      ],
      "properties":{
        "context":"modal",
        "modal_style":"full"
      }
    },
    {
      "patterns":[
        "/newPageSheet$"
      ],
      "properties":{
        "context":"modal",
        "modal_style":"page_sheet"
      }
    },
    {
      "patterns":[
        "/newFormSheet$"
      ],
      "properties":{
        "context":"modal",
        "modal_style":"form_sheet"
      }
    }
  ]
}
